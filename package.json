{
  "name": "kiwi-hackathon",
  "version": "1.0.0",
  "description": "Kiwi.com Hackathon",
  "main": "main.js",
  "engines": {
    "node": "6.10.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "apollo-client": "^1.5.0",
    "axios": "^0.16.2",
    "claudia-api-builder": "^2.0.0",
    "denodeify": "^1.2.1",
    "graphql-tag": "^2.4.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash.flatmap": "^4.5.0",
    "node-fetch": "^1.7.1",
    "superb": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "claudia": "^2.14.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4"
  },
  "scripts": {
    "start": "nodemon main.js --exec babel-node --presets es2015,stage-2",
    "build": "babel main.js -d dist --presets es2015,stage-2",
    "prettier": "prettier --single-quote --trailing-comma all --write '*.js'",
    "create": "yarn prettier && yarn build && claudia create --name travelhackers-api --region eu-central-1 --api-module dist/main --profile=Kiwi",
    "deploy": "yarn prettier && yarn build && claudia update --name travelhackers-api --region eu-central-1 --api-module dist/main --profile=Kiwi"
  }
}
